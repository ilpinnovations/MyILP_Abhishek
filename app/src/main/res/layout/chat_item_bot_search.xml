<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/balloon_incoming_normal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/chat_company_reply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_company_reply_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:text="@string/app_name"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/search_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    style="@style/chat_text_search_style_heading"
                    android:paddingLeft="20dp"
                    android:autoLink="web"
                    android:maxWidth="280dp"
                    android:text="Bhopal Current Weather - Accuweather ..." />

                <ImageView
                    android:id="@+id/search_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher"/>
            </LinearLayout>

            <TextView
                android:id="@+id/search_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/chat_text_search_style_link"
                android:paddingLeft="20dp"
                android:maxWidth="280dp"
                android:autoLink="web"
                android:text="AccuWeather > Bhopal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:maxWidth="280dp"
                android:layout_marginLeft="20dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/search_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/chat_text_search_style_summary"
                android:paddingLeft="20dp"
                android:autoLink="web"
                android:maxWidth="280dp"
                android:text="Get the Bhopal weather forecast. Access hourly, 10 day and 15 day forecasts along with up to the minute reports and videos for Bhopal, India from ..." />

        </LinearLayout>

        <TextView
            android:id="@+id/time_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/chat_company_reply_text"
            android:layout_marginLeft="10dp"
            style="@style/chat_timings"
            android:paddingRight="10dp"
            android:textColor="@color/gray"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@id/chat_company_reply_text"
            android:text="17:10" />

    </RelativeLayout>

</RelativeLayout>